
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/alert.css">

</head>
<body>
    <div class="main">
        <input type="checkbox" id="check" aria-hidden="true">
        <div class="signup">
            <form action="@Url.Action("Login","Acceso")" method="post">
                <label for="check" aria-hidden="true">Iniciar Sesion</label>
                <input type="email" name="Correo" placeholder="Correo del usuario">
                <input type="password" name="clave" placeholder="Contraseña">
                <button type="submit">Iniciar Sesion</button>

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-dark" role="alert">
                        @ViewData["Mensaje"]
                    </div>

                }


                <a class="button-link" href="@Url.Action("Registrar","Acceso")">¿No tienes una cuenta?  Registrarse</a>


            </form>

        </div>

    </div>

</body>
</html>
